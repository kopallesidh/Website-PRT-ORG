pipeline {
    environment{
        DOCKERHUB_CREDENTIALS = credentials("dhubcred")
    }
    agent { label 'K-M' }

    stages {
        stage('Git') {
            steps {
                git url:'https://github.com/kopallesidh/Website-PRT-ORG', branch: 'main'
            }
        }
        stage('Docker') {
            steps {
                sh 'sudo docker login -u ${DOCKERHUB_CREDENTIALS_USR} -p ${DOCKERHUB_CREDENTIALS_PSW}'
                sh 'find ${WORKSPACE} -name Dockerfile'  // Helps confirm Dockerfile location
                sh 'sudo docker build -t sidhartha700/pet-task ${WORKSPACE}'  // Dynamic path
                sh 'sudo docker push sidhartha700/pet-task'
            }
        }
        stage('k8s') {
            steps {
                sh 'kubectl apply -f deploy.yaml'
                sh 'kubectl apply -f service.yaml'
            }
        }
    }
}
